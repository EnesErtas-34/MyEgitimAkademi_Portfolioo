@model List<MyEgitimAkademi_Portfolioo.Models.About>
<section id="home" class="w3l-banner pb-5">
    <div class="container pb-md-3">
        @foreach (var item in Model)
        {
            <div class="banner-wrapper text-center">
                <div class="">
                    <span class="text">Hakkımda</span>
                    <h1 class="mb-4 title">
                        @item.Introduction, <span class="type-js"><span class="text-js">@item.NameSurname</span></span><br>
                       @item.Title
                    </h1>
                    <p class="mx-lg-5">
                       @item.Description
                    </p>
                </div>
                <div class="row">
                    <div class="col-lg-8 mx-lg-auto col-md-10">
                        <img src="@item.AboutImage" alt="" class="img-fluid mt-lg-5 mt-3">
                    </div>
                </div>
                <ul class="follow-social">
                    <li><p>Follow me </p></li>
                    <li><a href="#url"><span class="fa fa-behance"></span></a></li>
                    <li><a href="#url"><span class="fa fa-linkedin"></span></a></li>
                    <li><a href="#url"><span class="fa fa-facebook-official"></span></a></li>
                    <li><a href="#url"><span class="fa fa-twitter"></span></a></li>
                </ul>
            </div>
        }

    </div>
</section>
