@model List<MyEgitimAkademi_Portfolioo.Models.Award>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ödüllerim & Başarılarım</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
       
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.AwardID</td>
    <td>@item.Title</td>
    <td>@item.Description</td>
    <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
    <td><a href="/Award/DeleteAward/@item.AwardID" class="btn btn-outline-danger">Sil</a></td>
    <td><a href="/Award/UpdateAward/@item.AwardID" class="btn btn-outline-success">Güncelle</a></td>
    
</tr>
    }
</table>
<a href="/Award/AddAward" class="btn btn-outline-primary">Yeni Ödül Girişi</a>

